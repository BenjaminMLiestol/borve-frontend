    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "install": "^0.13.0",
    "postcss": "^8.4.35",
    "storybook": "^8.0.9",
    "tailwindcss": "^3.4.1",
