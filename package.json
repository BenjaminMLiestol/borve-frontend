{
	"name": "firmataxi-frontend",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"engines": {
		"npm": "use-pnpm",
		"pnpm": "*"
	},
	"scripts": {
		"dev": "pnpm i && pnpm run /^update:.*/ && vite",
		"build": "tsc && vite build",
		"update:upgrade": "pnpm update -L",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"prepare": "husky",
		"format": "biome check --apply ./src"
	},
	"dependencies": {
		"@tanstack/react-query": "^5.32.1",
		"@tanstack/react-query-devtools": "^5.32.1",
		"@tanstack/react-router": "^1.31.6",
		"i18next": "^23.11.3",
		"i18next-browser-languagedetector": "^7.2.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-i18next": "^14.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.2",
		"@chromatic-com/storybook": "^1.3.3",
		"@playwright/test": "^1.43.1",
		"@storybook/addon-essentials": "^8.0.9",
		"@storybook/addon-interactions": "^8.0.9",
		"@storybook/addon-links": "^8.0.9",
		"@storybook/addon-onboarding": "^8.0.9",
		"@storybook/blocks": "^8.0.9",
		"@storybook/react": "^8.0.9",
		"@storybook/react-vite": "^8.0.9",
		"@storybook/test": "^8.0.9",
		"@tanstack/router-devtools": "^1.31.6",
		"@tanstack/router-vite-plugin": "^1.30.0",
		"@types/node": "^20.12.8",
		"@types/react": "^18.3.1",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react-swc": "^3.6.0",
		"autoprefixer": "^10.4.19",
		"husky": "^9.0.11",
		"install": "^0.13.0",
		"postcss": "^8.4.38",
		"storybook": "^8.0.9",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.4.5",
		"vite": "^5.2.11"
	}
}
